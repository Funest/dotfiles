# Float Matlab, matplotlib and GNU Octave figures and Matlab scopes (QoL)
for_window [class="^MATLAB*|^matplotlib*|^GNU Octave*" title="^Figure*|^Scope*"] floating enable

# Don't teleport my mouse to other screen
mouse_warping none

# It pleases me more if workspaces start like this
workspace $ws0 output HDMI-A-0
workspace $ws1 output DisplayPort-0

# Quicker switching between workspaces with back-and-forth
workspace_auto_back_and_forth yes

# Keep urgent hint for a moment to see where it came from
force_display_urgency_hint 1500 ms

# vim:ft=i3config
